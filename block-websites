#!/bin/sh

file='sup.txt'
lead='# focus block start'
tail='# focus block end'

# Check if rules are already applied
if [ `sed -n '/^'"$lead"'$/p' $file | wc -l` -gt 0 ];
then
  # update
  echo "file updated"
  sed -e "/^$lead$/,/^$tail$/{ /^$lead$/{p; r blocked
        }; /^$tail$/p; d;}" $file
else
  # append to file
  echo "file updated by append"
  echo $lead  >> $file
  cat blocked >> $file
  echo $tail  >> $file
fi
